@model IEnumerable < Zirpl.Spotify.MetadataApi.Artist >
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <h2>Find your favorite artist</h2>
            @using (Html.BeginForm())
            {
            <p>
                Artist: @Html.TextBox("SearchString") <input type="submit" value="Search" />
            </p>
            } 
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Href)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Popularity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Href)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Popularity)
            </td>

            <td>
                @Html.ActionLink("Save", "Save", item)
            </td>

            
        </tr>
    }



</table>